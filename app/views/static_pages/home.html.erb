      <h3 data-number="1"><%= t :services %></h3>
        <%= image_tag "img.jpg" %>
        <p>
        <ul style="color: white">
          <li> Bodas </li>
          <li> XV años </li>
          <li> Aniversarios </li>
          <li> Primera comunion </li>
          <li> Bautizos </li>
          <li> o simplemente algún motivo para celebrar.</li>
        </ul>
        </p>
    </div>
    <div class="span4 infoHolder section_featured_texts animationStart">
      <h3 data-number="2">Menu</h3>
      <%= image_tag "img2.jpg" %>
      <p>
      <ul style="color: white">
        <li> Tres tiempos </li>
        <li> Buffet a elegir </li>
        <li> Coffee break </li>
        <li> Charolas de Bocadillos</li>
        <li> Platillos personalizados</li>
